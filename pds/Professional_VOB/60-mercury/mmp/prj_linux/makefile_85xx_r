TOP := ..

COMM_DIR := ../../common/linux_compile

SRC_DIR := $(TOP)/source

## Name and type of the target for this Makefile
APP_TARGET      := mcueqp_mmp

## Define debugging symbols
DEBUG = 0
LINUX_COMPILER = _HHPPC_
PPC_LINUX_VERSION=_85xx_
PWLIB_SUPPORT = 0

CFLAGS := -DMCUEQPMMP -DHARD_CODEC

## Object files that compose the target(s)
SRCS := $(wildcard $(SRC_DIR)/*.cpp)
OBJS := $(patsubst %.cpp,%, $(SRCS))

## Libraries to include in shared object file
LIBS := mmpagent basicboardagent audmixer bas vmp tvwall mpw smoothsending mcuprs watchdog allcodec codecwrapper fileencoder kdvmedianet fcnet enfc kdvencrypt kdvnetbuf  cci brd boardwrapper kdvlog osp kdvsys nipdebug ppc_82xx_nip_api ppc_82xx_nip_zzip rt dl pthread

## Add driver-specific include directory to the search path
INC_PATH += $(TOP)/include ../../../10-common/include/mcu ../../../10-common/include/system1 ../../../10-common/include/algorithm ../../../10-common/include/platform ../../../10-common/include/pwlib/ptlib ../../../10-common/include/protocol ../../common/include

LIB_PATH += ../../../10-common/lib/release/linux_ppc_85xx ../../../10-common/lib/release/linux_ppc_85xx/nip ../../../10-common/lib/release/linux_ppc_85xx/hdsc  ../../../10-common/lib/release/linux_ppc_85xx/nipdebug
 
ifeq ($(PWLIB_SUPPORT),1)
   PWLIB_PATH = pwlib
endif

include $(COMM_DIR)/common.mk
