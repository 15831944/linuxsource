LIB_PATH += ../../../10-common/lib/release/linux_ppc_82xx ../../../10-common/lib/release/linux_ppc_82xx/nip ../../../10-common/lib/release/linux_ppc_82xx/mdsc  ../../../10-common/lib/release/linux_ppc_82xx/nipdebug

