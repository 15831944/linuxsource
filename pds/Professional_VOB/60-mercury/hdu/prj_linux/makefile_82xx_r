TOP := ..

COMM_DIR := ../../common/linux_compile

SRC_DIR := $(TOP)/source

## Name and type of the target for this Makefile
APP_TARGET      := hdu

## Define debugging symbols
DEBUG = 0
LINUX_COMPILER = _HHPPC_
PWLIB_SUPPORT = 0

CFLAGS := -DHARD_CODEC -D_LINUX12_

## Object files that compose the target(s)
SRCS := $(wildcard $(SRC_DIR)/*.cpp)
OBJS := $(patsubst %.cpp,%, $(SRCS))

## Libraries to include in shared object file
LIBS :=  hdulib basicboardagent12 allcodec codecwrapper_tos fileencoder kdvmedianet fcnet enfc kdvencrypt  datatrans dspcci codeccommon toswrapper_hd taoscodec 8313_nipwrapper brd brdwrapper kdvlog kdvsys osp nipdebug ppc_8313_nip_api ppc_82xx_nip_zzip rt dl pthread

